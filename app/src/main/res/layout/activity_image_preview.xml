<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/fullscreenImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <!-- Bottom Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <!-- Crop Button -->
        <ImageButton
            android:id="@+id/cropButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_crop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Crop Image" />

        <!-- Filter Button -->
        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_flare"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Apply Filter" />

        <!-- Add Text Button -->
        <ImageButton
            android:id="@+id/textButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Text" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_autorenew"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Image" />

        <!-- Retake Button -->
        <ImageButton
            android:id="@+id/retakeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Retake Image" />
    </LinearLayout>
</RelativeLayout>
